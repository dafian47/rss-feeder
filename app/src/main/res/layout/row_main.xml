<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/backgroundInner"
    app:cardElevation="@dimen/toolbar_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_background_size">

        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDivider"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_thumb"
            android:background="@color/blackTransparent75"
            android:padding="@dimen/padding_normal">

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextHeaderBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="NTT Undang Presiden Jokowi Rasakan Sensasi Parade 1.001 Kuda"/>

            <TextView
                android:id="@+id/tv_category"
                style="@style/TextBodyBackground"
                android:layout_below="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorAccent"
                tools:text="Pesona Indonesia"/>

            <TextView
                android:id="@+id/tv_pub_date"
                style="@style/TextBodyBackground"
                android:layout_below="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:text="23 Juni 2017"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>